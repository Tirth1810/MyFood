<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.RecipeImageFragment">

   <de.hdodenhof.circleimageview.CircleImageView
       android:layout_marginTop="@dimen/_150sdp"
       android:id="@+id/circleImageView5"
       android:layout_width="@dimen/_100sdp"
       android:layout_height="@dimen/_100sdp"
       android:src="@drawable/picture"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <com.google.android.material.floatingactionbutton.FloatingActionButton
       android:id="@+id/recipeimagechoose"
       android:layout_marginBottom="@dimen/_20sdp"
       android:layout_width="@dimen/_40sdp"
       android:layout_height="@dimen/_40sdp"
       android:layout_marginStart="@dimen/_90sdp"
       android:layout_marginTop="@dimen/_50sdp"
       android:src="@drawable/baseline_camera_alt_24"
       app:layout_constraintBottom_toBottomOf="@+id/circleImageView5"
       app:layout_constraintEnd_toEndOf="@+id/circleImageView5"
       app:layout_constraintStart_toStartOf="@+id/circleImageView5"
       app:layout_constraintTop_toTopOf="@+id/circleImageView5" />

   <TextView
       android:id="@+id/textView31"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/_10sdp"
       android:text="Choose Dish Picture"
       android:textColor="@android:color/black"
       android:textSize="@dimen/_20ssp"
       android:typeface="serif"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/circleImageView5" />

   <Button
       android:id="@+id/postrecipe_btn"
       android:layout_width="@dimen/_130sdp"
       android:layout_height="@dimen/_40sdp"
       android:background="@drawable/et_bg"
       android:text="Post Recipe"
       android:textAllCaps="false"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView31" />

   <com.google.android.material.floatingactionbutton.FloatingActionButton
       android:id="@+id/recipe_image_back"
       android:layout_width="@dimen/_42sdp"
       android:layout_height="@dimen/_42sdp"
    android:layout_marginStart="@dimen/_20sdp"
       android:layout_marginBottom="@dimen/_20sdp"
       android:layout_marginTop="@dimen/_40sdp"
       android:src="@drawable/baseline_arrow_back_24_white"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/postrecipe_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>